<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Invoice</title>
  <style>
    body { font-family: "Segoe UI", Roboto, Arial, sans-serif; background: #f9f9f9; padding: 40px; font-size: 14px; color: #222; }
    .invoice-container { max-width: 1000px; margin: auto; background: #fff; border: 1px solid #ddd; padding: 40px; box-shadow: 0 0 15px rgba(0, 0, 0, 0.05); }
    .header { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 40px; gap: 24px; }
    .company-info { flex: 1; font-size: 13px; line-height: 1.5; }
    .company-info img { max-width: 150px; max-height: 80px; margin-bottom: 10px; }
    .invoice-details { text-align: right; min-width: 260px; }
    .invoice-title { font-size: 24px; font-weight: bold; margin-bottom: 10px; color: #333; }
    .section-title { font-size: 16px; font-weight: bold; margin-top: 30px; margin-bottom: 10px; border-bottom: 1px solid #ddd; padding-bottom: 5px; color: #444; }
    .client-details { font-size: 14px; line-height: 1.6; }
    .invoice-table { width: 100%; border-collapse: collapse; margin-top: 20px; font-size: 14px; }
    .invoice-table th, .invoice-table td { border: 1px solid #ccc; padding: 12px; vertical-align: top; }
    .invoice-table th { background-color: #f5f5f5; }
    .amount-cell { text-align: right; }
    .total-row td { font-weight: bold; background-color: #f9f9f9; }
    .amount-in-words { margin-top: 20px; font-style: italic; }
    .payment-details, .terms-section { margin-top: 30px; font-size: 14px; }
    .signature-section { margin-top: 50px; text-align: right; }
    .signature-section img { max-height: 60px; margin-top: 10px; }
    .footer-text { text-align: center; font-size: 12px; margin-top: 50px; color: #777; }
    .multiline-block { white-space: pre-wrap; }
  </style>
</head>
<body>
  <div class="invoice-container">
    <div class="header">
      <div class="company-info">
        <% if (company.logo) { %>
          <img src="<%= company.logo %>" alt="Company Logo" />
        <% } %>
        <div><strong><%= company.name %></strong></div>
        <% if (company.address) { %><div class="multiline-block"><%= company.address %></div><% } %>
        <% if (company.email) { %><div>Email: <%= company.email %></div><% } %>
        <% if (company.phone) { %><div>Phone: <%= company.phone %></div><% } %>
        <% if (company.gstin) { %><div>GSTIN: <%= company.gstin %></div><% } %>
      </div>
      <div class="invoice-details">
        <div class="invoice-title">TAX INVOICE</div>
        <div>Invoice No: <%= invoice.invoiceId || '0001' %></div>
        <div>Date: <%= invoice.date || 'DD/MM/YYYY' %></div>
      </div>
    </div>

    <div class="section-title">Bill To</div>
    <div class="client-details">
      <%= invoice.name %><br />
      <% if (invoice.email) { %>Email: <%= invoice.email %><br /><% } %>
      <% if (invoice.phone) { %>Phone: <%= invoice.phone %><% } %>
    </div>

    <table class="invoice-table">
      <thead>
        <tr>
          <th>Description</th>
          <th class="amount-cell">Hours</th>
          <th class="amount-cell">Rate (<%= invoice.currency || 'INR' %>)</th>
          <th class="amount-cell">Total (<%= invoice.currency || 'INR' %>)</th>
        </tr>
      </thead>
      <tbody>
        <% (invoice.items || []).forEach(function(item){ %>
          <% if ((item.description || "").trim().length) { %>
            <tr>
              <td><%= item.description %></td>
              <td class="amount-cell"><%= Number(item.hours || 0) %></td>
              <td class="amount-cell"><%= Number(item.rate || 0).toFixed(2) %></td>
              <td class="amount-cell"><%= Number(item.total || (Number(item.rate || 0) * Number(item.hours || 0))).toFixed(2) %></td>
            </tr>
          <% } %>
        <% }); %>

        <tr class="total-row">
          <td colspan="2"></td>
          <td class="amount-cell">Subtotal</td>
          <td class="amount-cell"><%= Number(invoice.amount || 0).toFixed(2) %></td>
        </tr>
        <% if (Number(invoice.tax || 0)) { %>
          <tr>
            <td colspan="2"></td>
            <td class="amount-cell">GST</td>
            <td class="amount-cell"><%= Number(invoice.tax || 0).toFixed(2) %></td>
          </tr>
        <% } %>
        <tr class="total-row">
          <td colspan="2"></td>
          <td class="amount-cell">TOTAL</td>
          <td class="amount-cell"><%= Number(invoice.total || (Number(invoice.amount || 0) + Number(invoice.tax || 0))).toFixed(2) %></td>
        </tr>
      </tbody>
    </table>

    <div class="amount-in-words">
      <strong>In Words:</strong> <%= invoice.currency || 'INR' %> <%= invoice.amountInWords || 'Zero' %> Only
    </div>

    <% if (company.accountName && company.accountNumber && company.ifsc) { %>
      <div class="payment-details">
        <strong>Bank Details:</strong>
        <div class="multiline-block">
          Account Name: <%= company.accountName %><br />
          Account No.: <%= company.accountNumber %><br />
          IFSC: <%= company.ifsc %><br />
          <% if (company.bankDetails) { %>
            <div><%= company.bankDetails %></div>
          <% } %>
        </div>
      </div>
    <% } %>

    <% if (company.termsAndConditions) { %>
      <div class="terms-section">
        <h3>Terms & Conditions</h3>
        <div class="multiline-block"><%= company.termsAndConditions %></div>
      </div>
    <% } %>

    <div class="signature-section">
      <div>For <%= company.name %></div>
      <% if (company.signature) { %>
        <img src="<%= company.signature %>" alt="Signature" />
      <% } else { %>
        <div style="margin-top: 30px; height: 50px;"></div>
      <% } %>
      <div style="border-top: 1px solid #000; padding-top: 5px;">Authorized Signatory</div>
    </div>

    <div class="footer-text">
      THANK YOU FOR YOUR BUSINESS!
    </div>
  </div>
</body>
</html>
